<resources>

    <style name="Theme.BaseApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/cardview_dark_background</item>

        <!--display snackbar above keyboard  | Hide Keyboard-->
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />


    <style name="BaseLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

    </style>


    <style name="AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
        <item name="elevation">2dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fitsSystemWindows">true</item>

    </style>


    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/appToolbarHeight</item>
        <item name="buttonGravity">center_vertical</item>

    </style>


    // ------------------------------------------- CollapsingToolbar -------------------------------

    <style name="CollapsingToolBar" parent="Widget.Design.CollapsingToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="expandedTitleMarginStart">@dimen/dimen_16</item>
        <item name="layout_collapseMode">parallax</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="contentScrim">@color/colorPrimary</item>

    </style>


    // ------------------------------------------- TextView ----------------------------------------

    <style name="TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextDefault</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">normal</item>

    </style>


    <style name="TextView.BoxHeader" parent="TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">@dimen/dimen_24</item>

    </style>


    <style name="TextView.Colored" parent="TextView">
        <item name="android:textColor">@color/colorTextHeader</item>

    </style>


    <style name="TextView.Paragraph" parent="TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextParagraph</item>

    </style>


    <style name="TextView.Paragraph.Colored" parent="TextView.Paragraph">
        <item name="android:textColor">@color/colorTextHeader</item>

    </style>


    <style name="TextView.Header" parent="TextView.Colored">
        <item name="android:textSize">16sp</item>

    </style>


    <style name="TextView.Header.Bold" parent="TextView.Paragraph.Colored">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>

    </style>


    <style name="TextView.Header.Bold.ExtraSize" parent="TextView.Header.Bold">
        <item name="android:textSize">18sp</item>

    </style>

    <style name="TextView.Clickable" parent="TextView.Header">
        <item name="android:paddingStart">@dimen/dimen_16</item>
        <item name="android:paddingEnd">@dimen/dimen_16</item>
        <item name="android:paddingTop">@dimen/dimen_8</item>
        <item name="android:paddingBottom">@dimen/dimen_8</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/colorTextParagraph</item>
        <item name="android:background">?attr/selectableItemBackground</item>

    </style>


    <style name="TextView.Title" parent="TextView.Header">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/dimen_8</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/app_name</item>

    </style>


    // ----------------------------------------- EditText ------------------------------------------

    <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8</item>
        <item name="errorTextAppearance">@style/InputLayout_ErrorAppearance</item>
        <item name="hintTextAppearance">@style/InputLayout_HintAppearance</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/colorTextDefault</item>
        <item name="boxCornerRadiusTopStart">@dimen/appComponentRadius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/appComponentRadius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/appComponentRadius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/appComponentRadius</item>

    </style>

    <style name="InputLayout_HintAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="InputLayout_ErrorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start|center</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:hint">@string/app_name</item>
        <item name="android:selectAllOnFocus">true</item>

    </style>


    // ------------------------------------------- ImageButton -------------------------------------

    <style name="ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dimen_8</item>
        <item name="android:paddingBottom">@dimen/dimen_8</item>
        <item name="android:paddingStart">@dimen/dimen_8</item>
        <item name="android:paddingEnd">@dimen/dimen_8</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@null</item>

    </style>


    // ------------------------------------------- ImageView ---------------------------------------

    <style name="ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    // ------------------------------------------- CardView ----------------------------------------

    <style name="CardView.Base" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">@dimen/appComponentRadius</item>
        <item name="cardElevation">@dimen/dimen_4</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="android:layout_marginStart">@dimen/dimen_8</item>
        <item name="android:layout_marginEnd">@dimen/dimen_8</item>
        <item name="android:layout_marginBottom">@dimen/dimen_16</item>

    </style>

</resources>