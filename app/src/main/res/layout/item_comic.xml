<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dimen_128"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_8"
    android:layout_marginTop="@dimen/dimen_8"
    android:orientation="vertical"
    android:padding="8dp">

    <com.google.android.material.card.MaterialCardView
        style="@style/CardView.Base"
        android:layout_marginStart="@dimen/dimen_0"
        android:layout_marginBottom="@dimen/dimen_0"
        android:layout_marginEnd="@dimen/dimen_0"
        app:cardCornerRadius="@dimen/dimen_8"
        android:layout_height="180dp">

        <am.leon.LeonImageView
            android:id="@+id/img_comic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@tools:sample/avatars"
            android:scaleType="fitXY" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_comicName"
        style="@style/TextView.Title"
        android:layout_marginTop="@dimen/dimen_4"
        android:layout_marginBottom="@dimen/dimen_8"
        android:textSize="16sp"
        android:maxLines="3"
        tools:text="@tools:sample/first_names" />

</LinearLayout>